{
  "include": [
    "./generators/base",
    "./generators/core",
    "./generators/base-application",
    "./generators/*/support",
    "./generators/*/type-export.d.ts"
  ],
  "exclude": ["**/*.spec.*", "**/__*/**"],
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declarationDir": "./dist/types",
    "declaration": true,
    "skipLibCheck": false /* Skip type checking all .d.ts files. */,
    "emitDeclarationOnly": true
  }
}
